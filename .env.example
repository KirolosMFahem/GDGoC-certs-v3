APP_NAME="GDGoC Certs"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000
APP_PORT=8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
# Choose your database driver: sqlite, mysql, or pgsql
# For Docker deployments, use mysql or pgsql with the corresponding service
DB_CONNECTION=sqlite

# Generic Database Connection Settings (used by Laravel)
# When using docker-compose, set DB_HOST to 'postgres' or 'mysql' (service name)
# DB_HOST should match the service name in docker-compose.yml
# Uncomment these when using PostgreSQL or MySQL:
# DB_HOST=postgres  # For PostgreSQL
# DB_HOST=mysql     # For MySQL
# DB_PORT=5432      # For PostgreSQL (default: 5432)
# DB_PORT=3306      # For MySQL (default: 3306)
# DB_DATABASE=gdgoc_certs
# DB_USERNAME=gdgoc_user
# DB_PASSWORD=secret

# PostgreSQL Specific Configuration
# These variables are used by the PostgreSQL Docker service
# Set these when using PostgreSQL with docker-compose
POSTGRES_DB=gdgoc_certs          # PostgreSQL database name
POSTGRES_USER=gdgoc_user         # PostgreSQL username
POSTGRES_PASSWORD=secret         # PostgreSQL password
POSTGRES_PORT=5432               # Host port to expose PostgreSQL (maps to container port 5432)

# MySQL Specific Configuration
# These variables are used by the MySQL Docker service
# Set these when using MySQL with docker-compose
MYSQL_ROOT_PASSWORD=rootsecret   # MySQL root password (required)
MYSQL_DATABASE=gdgoc_certs       # MySQL database name
MYSQL_USER=gdgoc_user            # MySQL username
MYSQL_PASSWORD=secret            # MySQL password
MYSQL_PORT=3306                  # Host port to expose MySQL (maps to container port 3306)

# Note: When switching between databases in docker-compose:
# 1. Update DB_CONNECTION to match your choice (mysql or pgsql)
# 2. Update DB_HOST to the service name (mysql or postgres)
# 3. Update DB_PORT to match the database port (3306 for MySQL, 5432 for PostgreSQL)
# 4. Ensure DB_DATABASE, DB_USERNAME, DB_PASSWORD match the service-specific variables
# 5. POSTGRES_PORT and MYSQL_PORT control which host ports to expose externally
#    while DB_PORT tells Laravel which port to connect to inside the Docker network
# 6. Stop and restart docker-compose services

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Brevo SMTP Configuration (Alternative)
BREVO_HOST=smtp-relay.brevo.com
BREVO_PORT=587
BREVO_USERNAME=
BREVO_PASSWORD=
BREVO_ENCRYPTION=tls

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# OAuth / OIDC Configuration
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_REDIRECT_URI="${APP_URL}/auth/callback"
OIDC_AUTHORIZATION_ENDPOINT=
OIDC_TOKEN_ENDPOINT=
OIDC_USERINFO_ENDPOINT=

# Domain Configuration for NGINX Proxy Manager
VALIDATION_DOMAIN=certs.gdg-oncampus.dev
DOMAIN_PUBLIC=certs.gdg-oncampus.dev
DOMAIN_ADMIN=sudo.certs-admin.certs.gdg-oncampus.dev

VITE_APP_NAME="${APP_NAME}"
